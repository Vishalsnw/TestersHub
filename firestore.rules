rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection rules
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Notifications collection rules
    match /notifications/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      match /items/{itemId} {
        allow read: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn();
      }
    }

    // Testing Requests collection rules
    match /testingRequests/{requestId} {
      // Allow read for authenticated users
      allow read: if isSignedIn();
      
      // Authenticated users can create requests
      allow create: if isSignedIn();
      
      // Allow update for joinedCount increment
      allow update: if isSignedIn() && (
        isOwner(resource.data.createdBy) || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['joinedCount']))
      );

      allow delete: if isSignedIn() && isOwner(resource.data.createdBy);

      // Supporters subcollection rules
      match /supporters/{userId} {
        // Any authenticated user can read supporters
        allow read: if isSignedIn();
        
        // Users can only create/update their own supporter document
        allow write: if isSignedIn() && isOwner(userId);
      }
    }
  }
}
